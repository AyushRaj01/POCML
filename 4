from sklearn.metrics import mean_absolute_error, mean_squared_error, mean_absolute_percentage_error

# Calculate accuracy metrics for the validation set predictions
mae = mean_absolute_error(y_val_actual_actual, y_pred_actual)
mse = mean_squared_error(y_val_actual_actual, y_pred_actual)
rmse = np.sqrt(mse)
mape = mean_absolute_percentage_error(y_val_actual_actual, y_pred_actual)
mape_percentage = mape * 100

print(f"Mean Absolute Error (MAE) on validation set: {mae}")
print(f"Mean Squared Error (MSE) on validation set: {mse}")
print(f"Root Mean Squared Error (RMSE) on validation set: {rmse}")
print(f"Mean Absolute Percentage Error (MAPE) on validation set: {mape_percentage:.2f}%")
